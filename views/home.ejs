<!DOCTYPE HTML >
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>小说主页</title>
</head>

<body>
    <div class="container">

        <div class="row">
            <div class="col-xs-12">
                <h3 style="text-align:center">个人追书</h3>
            </div>

        </div>


        <% for(var i = 0;i<data.length;i++){ %>

            <div class="row" style=" margin-top:20px; border:1px solid #a9c9e2;background:#e8f5fe">
                <div class="col-xs-12">
                    <a href="/directory?fid=<%= data[i].fid %>">
                        <h4 style="text-align:center">
                            <%= data[i].fictionName %>
                        </h4>
                    </a>
                </div>
                <div class="col-xs-offset-1 col-xs-4">
                    <h5>最新更新章节</h5>
                </div>
                <div class="col-xs-offset-1 col-xs-6">
                    <a href="#">
                        <h5>
                            <%= data[i].lastUpdateTitle %>
                        </h5>
                    </a>
                </div>
                <div class="col-xs-offset-1 col-xs-4">
                    <h5>最近更新时间</h5>
                </div>
                <div class="col-xs-offset-1 col-xs-6">
                    <a href="#">
                        <h5>
                            <%= data[i].lastUpdateTime %>
                        </h5>
                    </a>
                </div>
                <div class="col-xs-offset-3 col-xs-3">
                    <a href="#">
                        <button type="button" class="btn btn-primary" onclick="confirmDialog('<%= data[i].fictionName %>',<%= data[i].fid %>)">删除</button>
                    </a>
                </div>
                <div class="col-xs-3">
                    <a href="/update?fid=<%= data[i].fid %>">
                        <button type="button" class="btn btn-success">更新</button>
                    </a>
                </div>
            </div>

            <%}%>

                <div class="row " style=" margin-top:20px;background:#ffffdd">
                    <a href="#">
                        <div class="col-xs-2 col-xs-offset-2">
                            <button type="button" class="btn btn-warning" onclick="promptDialog('输入添加的网址')">添加小说</button>
                        </div>
                    </a>
                    <a href="/updateAll">
                        <div class="col-xs-2 col-xs-offset-1">
                            <button type="button" class="btn btn-success">全部更新</button>
                        </div>
                    </a>
                </div>


    </div>
    <script type="text/javascript">
        function confirmDialog(str, id) {
            var result = confirm("确认删除" + str);
            if (result) self.location = '/delete?fid=' + id;
        }


        function promptDialog() {
            var addUrl = prompt("输入添加的目录网址(目前只支持笔趣阁)：\n eg: https://www.biquge5200.com/0_195/");
            if (addUrl != null) {
                //https://www.biquge5200.com/76_76934/
                if (addUrl.split('/')[2] == 'www.biquge5200.com')
                    self.location = '/add?url=' + addUrl;
                else alert("目前只支持笔趣阁");

            } else {

            }
        }
    </script>
</body>

</html>